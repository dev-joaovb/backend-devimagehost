generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  isVerified Boolean   @default(false)
  verifyToken String?
  resetToken String?
  resetTokenExpiry DateTime?
  images    Image[]
}

model Image {
  id         Int      @id @default(autoincrement())
  filename   String
  fileUrl    String
  fileType   String?
  dimensions String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
}
